@using SchoolPartTime.Common
@section styles{
    <style type="text/css">
        .form-inline .form-control {
            width: 60%;
        }
    </style>
}
@{
    ViewData["Title"] = "修改内容";
    var page = new QueryPage();
}
@model User
@using (Html.BeginForm("SaveStudentEdit", "Account", new { name = "form", id = "form" }))
{
    <div class="container form-horizontal" style="height:750px;" id="jobList">
        <div class="row">
            <h1><span class="glyphicon glyphicon-pencil"></span>@ViewData["Title"]</h1>
        </div>
        @Html.Hidden("Id", Model.Id)
        <div class="form-group">
            <label for="Name" class="control-label col-md-2">用户名</label>
            <div class="col-md-10 form-inline">
                @Html.TextBoxFor(model => model.Name, new { @class = "form-control", Value = Model.Name })
                @Html.ValidationMessageFor(model => model.Name, "", htmlAttributes: new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label for="Count" class="control-label col-md-2">联系电话</label>
            <div class="col-md-10 form-inline">
                @Html.TextBoxFor(model => model.Tell, new { @class = "form-control", Value = Model.Tell })
                @Html.ValidationMessageFor(model => model.Tell, "", htmlAttributes: new { @class = "text-danger" })
            </div>
        </div>
        <div>
            <span style="margin-right:100px;margin-left:400px"><button type="submit" class="btn btn-primary">保存</button></span>
            <span><a href="/Account/StudentUser" class="btn btn-primary">返回</a></span>
        </div>
    </div>
}
