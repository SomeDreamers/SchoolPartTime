@using SchoolPartTime.Common
@{
    ViewData["Title"] = "修改内容";
    var page = new QueryPage();
}
@model Job
@using (Html.BeginForm("saveEdit", "job", new { name = "form", id = "form" }))
{
    <div class="container form-horizontal" style="height:750px;" id="jobList">
        <div class="row">
            <h1><span class="glyphicon glyphicon-pencil"></span>@ViewData["Title"]</h1>
        </div>
        @Html.Hidden("Id", Model.Id)
        <div class="form-group">
            <label for="Title" class="control-label col-md-2">标题</label>
            <div class="col-md-10 form-inline">
                @Html.TextBoxFor(model => model.Title, new { @class = "form-control",Value=Model.Title})
                @Html.ValidationMessageFor(model => model.Title, "", htmlAttributes: new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label for="Content" class="control-label col-md-2">内容描述和其他要求</label>
            <div class="col-md-10 form-inline">
                @Html.TextAreaFor(model => model.Content, new { @class = "form-control",Value=Model.Content})
                @Html.ValidationMessageFor(model => model.Content, "", htmlAttributes: new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label for="Count" class="control-label col-md-2">招聘人数</label>
            <div class="col-md-10 form-inline">
                @Html.TextBoxFor(model => model.Count, new { @class = "form-control",Value=Model.Count})
                @Html.ValidationMessageFor(model => model.Count, "", htmlAttributes: new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label for="StartTime" class="control-label col-md-2">招聘开始时间</label>
            <div class="col-md-10 form-inline">
                @Html.TextBoxFor(model => model.StartTime, new { @class = "form-control form_datetime", Value=Model.StartTime })
                @Html.ValidationMessageFor(model => model.StartTime, "", htmlAttributes: new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label for="EndTime" class="control-label col-md-2">招聘结束时间</label>
            <div class="col-md-10 form-inline">
                @Html.TextBoxFor(model => model.EndTime, new { @class = "form-control form_datetime", Value=Model.EndTime })
                @Html.ValidationMessageFor(model => model.EndTime, "", htmlAttributes: new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label for="Salary" class="control-label col-md-2">薪资(/小时)</label>
            <div class="col-md-10 form-inline">
                @Html.TextBoxFor(model => model.Salary, new { @class = "form-control" ,Value=Model.Salary})
                @Html.ValidationMessageFor(model => model.Salary, "", htmlAttributes: new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label for="AgeAsk" class="control-label col-md-2">年龄要求</label>
            <div class="col-md-10 form-inline">
                @Html.TextBoxFor(model => model.AgeAsk, new { @class = "form-control" ,Value=Model.SexAsk})
                @Html.ValidationMessageFor(model => model.AgeAsk, "", htmlAttributes: new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div>
                @Html.Label("SexAsk", "性别要求", new { @class = "control-label col-md-2" })
            </div>
            <div class="form-inline">
                <div class="col-md-10 form-inline">
                    @Html.DropDownListFor(model => model.SexAsk, SexTypeHelper.GetItems(type: Model.SexAsk,showNull: true), new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.SexAsk, "", htmlAttributes: new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div>
            <span style="margin-right:100px;margin-left:400px"><button type="submit" class="btn btn-primary">保存</button></span>
            <span><a href="/Job/JobList?page=@page" class="btn btn-primary">返回</a></span>
        </div>
    </div>
 }
