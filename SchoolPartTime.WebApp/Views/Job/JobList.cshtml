@model List<Job>
<div class="container" style="min-height:500px" id="questionList">
   @for (var i = 0; i < Model.Count; i++)
   {
       var job = Model[i];
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title">
                <span>@job.Title</span>
                <span style="float:right"><button style="padding-top:0px;padding-left:20px" type="button" class="btn btn-danger delete" data-question="@job.Id">删除</button></span>
                <span style="float:right"><a style="padding-top:0px;"  class="btn btn-danger remove" href="/Job/Edit?id=@job.Id">修改</a></span>
            </h3>
        </div>
        <div class="panel-body">
            <span>更新时间：@job.UpdateTime</span>
            <span style='float:right'>
                <a href="/Job/Details?id=@job.Id" class="btn btn-primary">
                     <span class="glyphicon glyphicon-eye-open"></span>详情
                </a>
            </span>
        </div>
    </div>

   }
</div>