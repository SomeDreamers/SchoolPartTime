
@model Job
@{
    ViewData["Title"] = "我要招聘";
}
@using (Html.BeginForm("save", "job", new { name = "form", id = "form" }))
{
    <div class="container" style="height:750px;" id="jobList">
        <div class="row">
            <h1><span class="glyphicon glyphicon-pencil"></span>@ViewData["Title"]</h1>
        </div>
        <div class="form-group">
            <label for="Name">标题</label>
            @Html.TextBoxFor(model => model.Title, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Title, "", htmlAttributes: new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <label for="Content">内容描述</label>
            @Html.TextBoxFor(model => model.Content, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Content, "", htmlAttributes: new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <label for="Organization">招聘人数</label>
            @Html.TextBoxFor(model => model.Count, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Count, "", htmlAttributes: new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <label for="Address">招聘开始时间</label>
            @Html.TextBoxFor(model => model.StartTime, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.StartTime, "", htmlAttributes: new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <label for="AgeAsk">招聘结束时间</label>
            @Html.TextBoxFor(model => model.EndTime, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.EndTime, "", htmlAttributes: new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <label for="AgeAsk">薪资(/天)</label>
            @Html.TextBoxFor(model => model.Salary, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Salary, "", htmlAttributes: new { @class = "text-danger" })
        </div>
        <div>
            <span style="margin-right:100px;margin-left:400px"><button type="submit" class="btn btn-primary">创建</button></span>
            <span><a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-primary">返回</a></span>
        </div>
    </div>
}


